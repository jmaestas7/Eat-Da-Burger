<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Eat-Da-Burger</title>
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col col-6">
                <h1 class="title">Eat-Da-Burger</h1>
                <div>
                    <div class="card" style="width: 50%;">
                        <div class="card-header">
                            Burger List
                        </div>
                        <ul class="list-group list-group-flush">
                            {{#each burgers}}
                            <li class="list-group-item">{{this.id}}. {{this.burger_name}}
                                <button>Devour</button>
                                {{/each}}
                            </li>
                        </ul>
                    </div>

                    <br>

                    <div onClick="but()" id="info">
                        <!-- displays burger entry -->
                        <div id="burger-entry" align="left"></div>
                        <div id="button"></div>
                    </div>

                    <br>
                    <form action="/" method="POST">
                        <div class="form-group mb-2">
                            <label for="exampleFormControlTextarea1">Example textarea</label>
                            <textarea class="form-control" id="input" type="text" name="burger_name" style="width: 50%" placeholder="Enter a Burger Name"></textarea>
                        </div>
                        <br>
                        <button onClick="burgerFunction()" id="submit">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

        <br>
        <br>

        <script type="text/javascript">
            function burgerFunction() {
                let input = document.getElementById("input").value;
                document.getElementById("burger-entry").innerHTML = input;

                let button = document.createElement("button");
                button.innerHTML = "Devour";
                let body = document.getElementById('button');
                body.appendChild(button);
            }

            $("#button").on("click", function () {
                $("#info").remove();
            });

        </script>

</body>

</html>